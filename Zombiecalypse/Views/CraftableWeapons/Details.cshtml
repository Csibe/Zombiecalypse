@model Zombiecalypse.Models.CraftableWeapon

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>CraftableWeapon</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ItemName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ItemType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ItemPicture)
        </dt>

        <dd>
            <img src=@Model.ItemPicture />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WeaponID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WeaponID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WeaponDurability)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WeaponDurability)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WeaponDamage)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WeaponDamage)
        </dd>
        <dt> Needed materials: </dt>
        <dd>
            <table>
                <tr>
                    <td>Item picture</td>
                    <td>Item ID</td>
                    <td>Item name</td>
                    <td>Pieces</td>
                </tr>
                @foreach (var item in @Model.WeaponMaterials)
            {
                    <tr>
                        <td>
                            <img src=@item.Item.ItemPicture />
                        </td>
                        <td>
                            @item.ItemID
                        </td>
                        <td>
                            @item.Item.ItemName
                        </td>
                        <td>
                            @item.MaterialPieces
                        </td>

                    </tr>

                }
            </table>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ItemID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
