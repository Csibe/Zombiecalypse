@model Zombiecalypse.Models.BuildingDetails

@{
    ViewBag.Title = "Details";
}

<h2>Details2</h2>

<div>
    <h4>BuildingDetails</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ItemName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ItemPicture)
        </dt>

        <dd>
            <img src=@Model.ItemPicture />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BuildingID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BuildingID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BuildingLevel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BuildingLevel)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BuildingMoneyCost)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BuildingMoneyCost)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BuildingEnergyCost)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BuildingEnergyCost)
        </dd>
        <dt>
            Craftable Weapons:
        </dt>
        <dd>
            <table border="1">
                <tr>
                    <td></td>
                    <td>Weapon ID</td>
                    <td>Name</td>
                    <td>Durability</td>
                    <td>Item ID</td>
                    <td>Materials</td>
                    <td></td>
                </tr>
                @foreach (var weapon in Model.CraftableWeapons)
                {
                    <tr>
                        <td>
                            <img src=@weapon.Weapon.ItemPicture />
                        </td>
                        <td>
                            @weapon.WeaponID
                        </td>
                        <td>
                            @weapon.ItemName
                        </td>
                        <td>
                            @weapon.Weapon.WeaponDurability
                        </td>
                        <td>
                            @weapon.ItemID
                        </td>
                        <td>
                            <table border="1">
                                        <tr>
                                            <td>ID</td>
                                            <td>Picture</td>
                                            <td>Name</td>
                                            <td>Pieces</td>
                                        </tr>
                                        @foreach (var mat in Model.ComponentOfCraftableWeapon)
                                        {
                                            if (@mat.WeaponID == weapon.WeaponID && @mat.Item.ItemType == "material")
                                            {
                                                {
                                                    <tr>
                                                        <td>
                                                            @mat.MaterialID
                                                        </td>
                                                        <td>
                                                            <img width="50" height="50" src=@mat.Item.ItemPicture />
                                                        </td>
                                                        <td>
                                                            @mat.Item.ItemName
                                                        </td>
                                                        <td>
                                                            @mat.MaterialPieces
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        }

                                    </table>
                                <td>Craft</td>
                                </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ItemID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
